    <Nullable>enable</Nullable>
    <UserSecretsId>96c910ae-6b16-474f-b254-e27f56841a1e</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.Development.json" />
